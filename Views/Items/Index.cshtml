@{
  Layout = "_Layout";
}

@using YeOldeInvMany.Models;
@model List<YeOldeInvMany.Models.Item>;

<h2>Items</h2>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

<ul>
  @foreach(Item item in Model)
  {
    <li>@Html.ActionLink($"{item.Object}", "Details", new { id = item.ItemId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<img src="~/img/photo2.jpeg">